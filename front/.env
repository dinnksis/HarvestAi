# ============================================
# VITE Environment Variables (для разработки)
# ============================================

# API Configuration
VITE_API_URL=http://localhost:8000

# Map Configuration
VITE_MAP_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png
VITE_DEFAULT_LAT=55.7558
VITE_DEFAULT_LNG=37.6173
VITE_MAP_ZOOM=13

# Application Settings
VITE_APP_NAME=HarvestAI
VITE_APP_VERSION=1.0.0

# ============================================
# Legacy CRA Variables (для совместимости)
# ============================================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_MAP_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png
REACT_APP_DEFAULT_LAT=55.7558
REACT_APP_DEFAULT_LNG=37.6173

# ============================================
# Development Settings
# ============================================
# Для режима разработки (опционально)
NODE_ENV=development

# Если нужно отключить строгий режим React (опционально)
# VITE_REACT_STRICT_MODE=false